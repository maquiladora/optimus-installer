<VirtualHost *:80>
  ServerAdmin prime@%DOMAIN%
  ServerName api.%DOMAIN%
  DirectoryIndex index.php index.html
  DocumentRoot /srv/api
  LogLevel warn
  ErrorLog /var/log/apache2/api-error.log
  CustomLog /var/log/apache2/api-access.log combined

  <IfModule mod_php7.c>
  php_admin_value open_basedir /srv/
  </IfModule>

  <Directory /srv/api/>
    Options FollowSymLinks
    AllowOverride None
    Require all granted

    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php?q=$1 [L,QSA]
  </Directory>

</VirtualHost>
